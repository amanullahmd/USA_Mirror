# Database Connection
# For local development:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/usa_mirror_db

# For Railway:
DATABASE_URL=postgresql://postgres:password@host:port/database

# Session Secret
# Generate a strong random secret before running:
# Node:  node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
# OpenSSL: openssl rand -hex 48
SESSION_SECRET=replace-with-strong-random-secret

# Application Port
PORT=5000

# Environment
NODE_ENV=development
